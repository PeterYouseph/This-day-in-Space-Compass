<!-- frontend/views/homepage.handlebars -->

<h1 class="text-center">Search for Astronomy Pictures</h1>

<div class="form-container"> 
    <form id="search-form" class="mt-5 mb-5 mx-auto" action="/" method="GET">
        <div class="row g-3 align-items-center justify-content-center">
            <div class="col-md-3 form-group">
                <label for="date">Date:</label>
                <input type="date" id="date" name="date" class="form-control">
            </div>

            <div class="col-md-3 form-group">
                <label for="start-date">Start Date:</label>
                <input type="date" id="start-date" name="start_date" class="form-control">
            </div>

            <div class="col-md-3 form-group">
                <label for="end-date">End Date:</label>
                <input type="date" id="end-date" name="end_date" class="form-control">
            </div>

            <div class="col-md-3 form-group">
                <label for="count">Count:</label>
                <input type="number" id="count" name="count" class="form-control">
            </div>
        </div>
        <button type="submit" class="btn px-5">Search</button>
    </form>
</div>

<div id="results" class="container mt-5 mb-5">
    <div class="row justify-content-center">
        {{#if data}}
            {{#each data}}
                <div class="col-md-6 text-left">
                    <h2>{{title}}</h2>
                    <p>{{explanation}}</p>
                    {{#if copyright}}
                        <p id="copyright-text" class="text-muted text-end">Copyright: {{copyright}}</p>
                    {{/if}}
                </div>
                    
                <div class="col-md-6">
                    <img src="{{url}}" alt="{{title}}" class="img-fluid">
                </div>
            {{/each}}
        {{else}}
            <p>No data available.</p>
        {{/if}}
    </div>
</div>